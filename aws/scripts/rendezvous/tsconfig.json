{
  "compilerOptions": {
    "lib": [
      "ES2022",
      "dom"
    ],
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "include"
  ]
}
